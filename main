#include <stdio.h>

void linha(void){
    printf("\n\n\n$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$\n");
    printf("&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&\n");
    printf("$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$\n\n\n");
  }

int main(void) {

  float aposta,lucro,probabilidade,cotacao;

  printf("_________________            _            _____       _____    _________________    _________________    _________________    _________________            _            _________________\n");
  printf("_________________           ___           _____       _____    _________________    _________________    _________________    _________________           ___           _________________\n");
  printf("_____                      __ __          _____       _____    ______      _____    _____       _____    _____                _________________          __ __          _____\n");
  printf("_____      ______         __   __         _____       _____    ______      _____    _____       _____    _____                     _______              __   __         _____\n");
  printf("_____      ______        __     __        _____       _____    _________________    _____       _____    _________________         _______             __     __        _________________\n");
  printf("_____        ____       ___________       _____       _____    _________________    _____       _____    _________________         _______            ___________       _________________\n");
  printf("_____        ____      _____________      _____       _____    ______               _____       _____               ______         _______           _____________                 ______\n");
  printf("_________________     ____       ____     _________________    ______               _________________    _________________         _______          ____       ____     _________________\n");
  printf("_________________    ____         ____    _________________    ______               _________________    _________________         _______         ____         ____    _________________\n");

  linha();

  printf("\nProbabilidade do time: ");
  scanf("%f", &probabilidade);
  printf("Valor apostado: ");
  scanf("%f", &aposta);

  linha();

  cotacao = 100/probabilidade;
  lucro = aposta*cotacao;

  printf("Valor apostado: %.0f\n", aposta);
  printf("Lucro obtido: %.0f\n", lucro-aposta);
  printf("Valor total: %.0f\n", lucro);
  system("pause");
  return 0;
}
